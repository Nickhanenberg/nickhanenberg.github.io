        // Get the current day of the week (0 = Sunday, 1 = Monday, ..., 6 = Saturday)
        var today = new Date().getDay();

        // Calculate X based on the current day of the week
        var X = ((today - 1) % 3) + 1;

        // Array to store the Dutch days of the week
        var daysOfWeek = ["zondag", "maandag", "dinsdag", "woensdag", "donderdag", "vrijdag", "zaterdag"];

        // Display the message
        document.getElementById("programma").innerHTML = "U luistert vandaag in programma " + X + ", klopt dit?";
    </script>
